<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:background="@color/white2"
    android:orientation="vertical" >
<TextView
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:text="个人资料"
    android:paddingLeft="10dp"
    android:paddingTop="33dp"

    android:textColor="@color/white_pure"
    android:textSize="18sp"

    android:background="@color/myblue"/>
    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="16.0dp"
        android:background="@color/black_margin" />
    <LinearLayout
        android:id="@+id/button_changepic"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:background="@drawable/listview_selector"
        android:gravity="center_vertical"
        android:paddingLeft="16.0dp"
        android:paddingRight="12.0dp">
        <TextView
            android:layout_width="0.0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dp"
            android:layout_weight="1.0"
            android:text="头像"
            android:textColor="@color/black_title"
            android:textSize="@dimen/main_text_size_large" />
        <com.origamiboat.wang.origamiboat.utils.circleimageview.CircleImageView

            android:id="@+id/iv_personal_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/default_personal_image"
            />

        <ImageView
            android:layout_width="9.0dp"
            android:layout_height="15.0dp"
            android:background="@drawable/selector_indicator" />
    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="16.0dp"
        android:background="@color/black_margin" />

    <LinearLayout

        android:layout_width="fill_parent"
        android:layout_height="48.0dp"
        android:background="@drawable/listview_selector"
        android:gravity="center_vertical"
        android:paddingLeft="16.0dp"
        android:paddingRight="12.0dp">



        <TextView
            android:layout_width="0.0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dp"
            android:layout_weight="1.0"
            android:text="昵称"
            android:textColor="@color/black_title"
            android:textSize="@dimen/main_text_size_large" />

        <ImageView
            android:layout_width="9.0dp"
            android:layout_height="15.0dp"
            android:background="@drawable/selector_indicator" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/black_margin" />
    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="16.0dp"
        android:background="@color/black_margin" />

    <LinearLayout

        android:layout_width="fill_parent"
        android:layout_height="48.0dp"
        android:background="@drawable/listview_selector"
        android:gravity="center_vertical"
        android:paddingLeft="16.0dp"
        android:paddingRight="12.0dp">

        <TextView
            android:layout_width="0.0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dp"
            android:layout_weight="1.0"
            android:text="密码"
            android:textColor="@color/black_title"
            android:textSize="@dimen/main_text_size_large" />

        <ImageView
            android:layout_width="9.0dp"
            android:layout_height="15.0dp"
            android:background="@drawable/selector_indicator" />
    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/black_margin" />


    <Button
        android:id="@+id/exit_login"
        android:layout_gravity="center_horizontal"
        android:background="#fb6155"
        android:layout_width="300dp"
        android:layout_marginTop="50dp"
        android:layout_height="wrap_content"
        android:text="退出登录"
        android:textColor="#ffffff"
        android:textSize="20sp"

        />
</LinearLayout>