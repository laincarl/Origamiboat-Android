<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white2"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/myblue">

            <RelativeLayout
                android:layout_width="50.0dp"
                android:layout_height="30.0dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="10.0dp"
                android:layout_marginTop="30dp">

                <View
                    android:id="@+id/v_notice"
                    android:layout_width="5.0dp"
                    android:layout_height="5.0dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/shape_reddot"
                    android:visibility="invisible"/>

                <TextView
                    android:id="@+id/tv_message"
                    android:layout_width="50.0dp"
                    android:layout_height="30.0dp"
                    android:layout_marginRight="3.0dp"
                    android:layout_marginTop="1.0dp"
                    android:gravity="right"
                    android:text="消息"
                    android:textColor="@color/white_pure"
                    android:textSize="@dimen/text_size_16"
                    android:visibility="invisible"/>
            </RelativeLayout>
            <com.origamiboat.wang.origamiboat.utils.circleimageview.CircleImageView

                android:id="@+id/head_pic"
                 android:layout_width="108.0dp"
                 android:layout_height="108.0dp"
                 android:layout_centerHorizontal="true"

                 android:layout_marginTop="55.0dp"
                 android:layout_marginBottom="25dp"
                android:src="@drawable/default_personal_image"
                />

        </RelativeLayout>
        <include
            layout="@layout/item_comicer_user"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />


            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="@color/black_margin" />


            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="@color/black_margin" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="16.0dp"
                    android:background="@color/black_margin" />

        <LinearLayout
            android:id="@+id/button_about"
            android:layout_width="fill_parent"
            android:layout_height="48.0dp"
            android:background="@drawable/listview_selector"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="16.0dp"
            android:paddingRight="12.0dp">

            <ImageView
                android:layout_width="24.0dp"
                android:layout_height="21.0dp"
                android:layout_marginLeft="16.0dp"
                android:src="@drawable/shu" />


            <TextView
                android:layout_width="0.0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16.0dp"
                android:layout_weight="1.0"
                android:text="关于我们"
                android:textColor="@color/black_title"
                android:textSize="@dimen/main_text_size_large" />

        </LinearLayout>

        <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/black_margin" />


                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="16.0dp"
                    android:background="@color/black_margin" />

                <LinearLayout
                    android:id="@+id/ll_download"
                    android:layout_width="fill_parent"
                    android:layout_height="48.0dp"
                    android:background="@drawable/listview_selector"
                    android:gravity="center_vertical"
                    android:paddingLeft="16.0dp"
                    android:paddingRight="12.0dp">

                    <ImageView
                        android:layout_width="24.0dp"
                        android:layout_height="21.0dp"
                        android:layout_marginLeft="16.0dp"
                        android:src="@drawable/shou" />

                    <TextView
                        android:layout_width="0.0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16.0dp"
                        android:layout_weight="1.0"
                        android:text="收藏"
                        android:textColor="@color/black_title"
                        android:textSize="@dimen/main_text_size_large" />

                    <ImageView
                        android:layout_width="9.0dp"
                        android:layout_height="15.0dp"
                        android:background="@drawable/selector_indicator" />

                </LinearLayout>
            <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="@color/black_margin" />
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="16.0dp"
                    android:background="@color/black_margin" />

                <LinearLayout
                    android:id="@+id/button_set"
                    android:layout_width="fill_parent"
                    android:layout_height="48.0dp"
                    android:background="@drawable/listview_selector"
                    android:gravity="center_vertical"
                    android:paddingLeft="16.0dp"
                    android:paddingRight="12.0dp">

                    <ImageView
                        android:layout_width="24.0dp"
                        android:layout_height="21.0dp"
                        android:layout_marginLeft="16.0dp"
                        android:src="@drawable/she" />

                    <TextView
                        android:layout_width="0.0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16.0dp"
                        android:layout_weight="1.0"
                        android:text="设置"
                        android:textColor="@color/black_title"
                        android:textSize="@dimen/main_text_size_large" />

                    <ImageView
                        android:layout_width="9.0dp"
                        android:layout_height="15.0dp"
                        android:background="@drawable/selector_indicator" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/black_margin" />
            </LinearLayout>




</ScrollView>